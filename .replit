modules = ["java", "java-8", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Minecraft Forge Mod Build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "minecraft_mod_build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MinecraftFusion Website"

[[workflows.workflow]]
name = "Minecraft Forge Mod Build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export JAVA_HOME=/nix/store/srvs25mv9c29dnzxpx9d94mrm30l6j93-openjdk-17.0.1+12; ./gradlew build"

[[workflows.workflow]]
name = "minecraft_mod_build"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew build"

[[workflows.workflow]]
name = "MinecraftFusion Website"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd website && node server/server.js"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "export JAVA_HOME=/nix/store/srvs25mv9c29dnzxpx9d94mrm30l6j93-openjdk-17.0.1+12; ./gradlew build"]

[[ports]]
localPort = 5000
externalPort = 80
